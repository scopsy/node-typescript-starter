{
  "name": "node-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/scopsy/node-typescript-starter"
  },
  "author": "Dima Grossman",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "npm run build-ts && npm run tslint",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|js)",
      "**/src/**/*.e2e.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@decorators/di": "^1.0.1",
    "@decorators/express": "^2.2.0",
    "@decorators/mongoose": "^3.0.0",
    "apollo-client-preset": "^1.0.5",
    "async": "^2.5.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^1.3.2",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-handlebars": "^3.0.0",
    "express-helpers": "^1.3.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.2.1",
    "fbgraph": "^1.4.1",
    "github": "^13.0.1",
    "graphql": "^0.12.3",
    "graphql-request": "^1.4.0",
    "graphql-tag": "^2.6.1",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "moment": "^2.20.1",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "nodemailer": "^2.7.2",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-facebook-token": "^3.3.0",
    "passport-github": "^1.1.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "pretty-error": "^2.1.1",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.34",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/express-session": "^1.15.5",
    "@types/jest": "^21.1.5",
    "@types/jquery": "^3.2.15",
    "@types/lodash": "^4.14.80",
    "@types/mongodb": "^2.2.18",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.5",
    "@types/passport-facebook": "^2.1.3",
    "@types/passport-facebook-token": "^0.4.33",
    "@types/passport-github": "^1.1.2",
    "@types/passport-jwt": "^3.0.0",
    "@types/request": "^2.0.7",
    "@types/request-promise": "^4.1.39",
    "@types/supertest": "^2.0.0",
    "concurrently": "^3.4.0",
    "eslint": "^4.14.0",
    "jest": "^21.2.1",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "typescript": "^2.4.0"
  }
}
